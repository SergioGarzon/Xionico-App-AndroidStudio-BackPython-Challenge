<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.MainActivity"
    android:background="#02172a"
    tools:ignore="ExtraText">

    <ImageView
        android:id="@+id/imgLogotype"
        android:layout_width="223dp"
        android:layout_height="175dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.053"
        app:srcCompat="@drawable/xionico" />

    <Button
        android:id="@+id/btnTarea"
        android:layout_width="221dp"
        android:layout_height="53dp"
        android:text="CREAR TAREA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2"
        app:layout_constraintVertical_bias="0.206" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="302dp"
        android:layout_height="38dp"
        android:text="LISTADO DE TAREAS"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLogotype"
        app:layout_constraintVertical_bias="0.038" />

    <Button
        android:id="@+id/btnDatosExternos"
        android:layout_width="221dp"
        android:layout_height="53dp"
        android:layout_marginBottom="44dp"
        android:text="DATOS EXTERNOS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTarea"
        app:layout_constraintVertical_bias="0.0" />


    <RelativeLayout

        android:id="@+id/relativeLayout2"
        android:layout_width="361dp"
        android:layout_height="285dp"
        android:background="@drawable/border_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.061">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvTaskList"
            android:layout_width="334dp"
            android:layout_height="228dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="46dp" />

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>